{
  "extends": "./tsconfig.json",
  "types": ["node"],
  "include": ["vite.config.*", "vitest.config.*", "cypress.config.*", "nightwatch.conf.*", "playwright.config.*", "server/**/*.ts"],
  "exclude": ["src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "composite": true,
    "lib": ["ES6"],
    "module": "ES2020",
    "moduleResolution": "Node",
    // "rootDir": "server",
    "outDir": "dist",
    "strict": true,
    "types": ["node"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}

{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "server/main.ts", "server/middleware/*", "window.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
